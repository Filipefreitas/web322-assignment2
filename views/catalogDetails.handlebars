<section>
    <div class="backImg" 
        style="background-image: linear-gradient(to right, rgba(4, 28, 44, 1) 50%, rgba(250, 250, 250, 0.2))
            , url('/img/background_images/{{product.backImg}}');">

        <div class="movie-details grid grid-col-2-3">
            <div>
                <img src = "/img/posters/{{product.src}}" alt = "{{product.alt}}">
            </div>

            <div>
                <div>
                    <h1>{{product.title}}</h1>
                    <h3>{{product.gender}}   </h3>
                    <h3>|</h3>
                    <h3>{{product.year}}</h3>
                    <h3>|</h3>
                    <h3>{{product.rating}}</h3>                
                </div>
                
                <div class="btn-container">
                    <a href="" class="btn btn-primary" id="trailer">Trailer</a>
                    <a href="" class="btn btn-primary"><i class="fas fa-plus-circle"></i>&nbsp; List</a>
                    <a href="" class="btn btn-primary">Reedem</a>
                </div>

                <div>
                    <p>{{product.description}}</p>        
                </div>

                <div>
                    <a href="" class="btn btn-secondary">Rent ${{product.rentPrice}}</a>
                    <a href="" class="btn btn-secondary">Buy ${{product.purchasePrice}}</a></a>
                </div>
            </div>
        </div>
    </div>
    
    <hr>
    
    <div class="movie-details">
        <h2>Cast &amp; Crew</h2>
        
        {{#if product.director}}
            <p>Director: {{product.director}}</p>
        {{/if}}

        {{#if product.creators}}
            <p>Creators: {{product.creators}}</p>
        {{/if}}

        {{#if product.writers}}
            <p>Writers: {{product.writers}}</p>
        {{/if}}

        {{#if product.stars}}
            <p>Stars: {{product.stars}}</p>
        {{/if}}
    </div>
</section>

<section>
    <div class="modal hide" role="dialog">
        <div class="modal-container">     
            <button type="button" class="close-modal btn-secondary" data-dismiss="modal" aria-hidden="true">Ã—</button> 
            <div class="movie-preview-full-no-margin">
                <iframe src={{product.trailer}} frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</section>