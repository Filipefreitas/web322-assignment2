<section>
    <div id="form">
        <form id="fs-frm" name="simple-contact-form" accept-charset="utf-8" actiion="/registration" method="POST"> 
            <fieldset id="fs-frm-inputs" class="form-control">
                <div>
                    <img src="/img/banners/Signup_Banner_600x80_April.png">
                </div>

                <div id="form-top-message">
                    <h1>Create a New Account</h1>
                </div>

                <div class="form-control">
                
                    <div class="cxName">
                        <input class="input input-size-1" type="text" name="firstName" id="first-name" placeholder="First name">
                        <input class="input input-size-1" type="text" name="lastName" id="last-name" placeholder="Last name">
                        <div class="error-fields">{{errorMessages.[1]}}</div>
                        <div class="error-fields">{{errorMessages.[2]}}</div>
                    </div>

                    <input class="input input-size-2" type="text" name="emailAddress" id="email-address" placeholder="Email">
                    <input class="input input-size-2" type="password" name="password" id="password" placeholder="Password">
                    <div class="error-fields">{{errorMessages.[3]}}</div>

                    <input id="btn-submit" type="submit" value="Sign Up" class="btn btn-secondary">
                    <div class="error-fields">{{errorMessages.[4]}}</div>
                </div>

                <div class="error-fields hide" id="form-error"></div>
                <input type="hidden" name="_subject" id="form-submit" value="Sign Up Submission">
        </fieldset>
        </form>
    </div>        
</section>