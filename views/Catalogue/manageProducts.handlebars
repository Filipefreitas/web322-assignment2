<div id="edit-header">
    <h1>Manage database Page</h1>
    <p>List of products in the database:</p>
</div>

<section>
    <table id="table-products" class="table-products">
        <thead class="table-header">
            <th>#</th>
            <th>Title</th>
            <th>Gender</th>
            <th>Year</th>
            <th>Featured</th>
            <th>Favourited</th>
            <th>Action: edit</th>
            <th>Action: delete</th>
        </thead>
    
        <tbody>
        {{#each data}}
            <tr>
                <td class="counterCell"></td> 
                <td>{{this.title}}</td> 
                <td>{{this.gender}}</td> 
                <td>{{this.year}}</td> 
                <td>{{this.featured}}</td> 
                <td>{{this.favourited}}</td> 

                <td>
                    <a href="/catalogue/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                </td>

                <td>
                    <a href="/catalogue/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                </td>
            </tr>
        
            {{else}}
                <td colspan="8">
                    <p>No products in the database</p>
                </td>

            {{/each}}
        </tbody>

    </table>

</section>