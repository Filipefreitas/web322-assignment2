<section>
    <div class="backImg" 
        style="background-image: linear-gradient(to right, rgba(4, 28, 44, 1) 50%, rgba(250, 250, 250, 0.2))
            , url('/img/background_images/{{backImg}}');">

        <div class="movie-details grid grid-col-2-3">
            <div>
                <img src = "/img/posters/{{srcImg}}" alt = "{{alt}}">
            </div>

            <div>
                <div>
                    <h1>{{title}}</h1>
                    <h3>{{gender}}</h3>
                    <h3>|</h3>
                    <h3>{{year}}</h3>
                    <h3>|</h3>
                    <h3>{{rating}}/10</h3>                
                </div>
                
                <div class="btn-container">
                    <a href="" class="btn btn-primary" id="trailer">Trailer</a>
                    <a href="" class="btn btn-primary"><i class="fas fa-plus-circle"></i>&nbsp; List</a>
                    <a href="" class="btn btn-primary">Reedem</a>
                </div>

                <div>
                    <p>{{description}}</p>        
                </div>

                <div>
                    <a href="/cart/add-rent/{{this._id}}" role="button" class="btn btn-secondary">Rent ${{rentPrice}}</a>
                    <a href="/cart/add-purchase/{{this._id}}"  role="button" class="btn btn-secondary">Buy ${{purchasePrice}}</a></a>
                </div>
            </div>
        </div>
    </div>
    
    <hr>
    
    <div class="movie-details">
        <h2>Cast &amp; Crew</h2>
        
        {{#if director}}
            <p>Director: {{director}}</p>
        {{/if}}

        {{#if creators}}
            <p>Creators: {{creators}}</p>
        {{/if}}

        {{#if writers}}
            <p>Writers: {{writers}}</p>
        {{/if}}

        {{#if stars}}
            <p>Stars: {{stars}}</p>
        {{/if}}
    </div>
</section>

<section>
    <div class="modal hide" role="dialog">
        <div class="modal-container">     
            <button type="button" class="close-modal btn-secondary" data-dismiss="modal" aria-hidden="true">Ã—</button> 
            <div class="movie-preview-full-no-margin">
                <iframe src={{trailer}}></iframe>                 
            </div>
        </div>
    </div>
</section>