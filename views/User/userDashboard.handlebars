<section>
<div id="home-client">
    <div>
        <p>Welcome In, {{user.firstName}} {{user.lastName}}</p>
        <p>Here is your purchase history:</p>
    </div>

    {{#each orders}}
    
        <div class="order-container grid grid-col-3-2">
            <div class="order-img"> 
                <img class="order-img-src" src = "/img/posters/src_img_{{itemId}}.jpg">
            </div>

            <div class="order-item">
                <div>
                    <span class="key"> Order number: </span>
                    <span> {{id}} </span>
                </div>

                <div>
                    <span class="key"> Date: </span>
                    <span> {{orderDate}} </span>
                </div>

                <div>
                    <span class="key"> Title: </span>
                    <span> {{title}} </span>
                </div>

                <div>
                    <span class="key"> Unit price: </span>
                    <span> {{orderListPrice}} </span>
                </div>
                
                <div>
                    <span class="key"> Quantity: </span>
                    <span> {{orderQuantity}} </span>
                </div>
                
                <div>
                    <span class="key"> Type: </span>
                    <span> {{orderType}} </span>
                </div>
            </div>

            <div class="order-total">
                <div class="sub-total">
                    <div class="key"> Total: </div>
                    <div> $ {{subTotal}} </div>
                </div>
            </div>
        </div>

    {{else}}

        <div>You have not placed any order yet</div>

    {{/each}}
</div>
</section>