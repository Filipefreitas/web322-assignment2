<section>

    <form id="fs-frm" name="orderTable" accept-charset="utf-8" action="/cart/confirmation" method="POST"> 
    <div id="order-container">
        <h2>Your cart</h2>

        <div id="order-details">

        <table id="table-products" class="table-products">
            <h4>Order details: </h3>

            <thead class="table-header">
                <th>#</th>
                <th>Item</th>
                <th>Type</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
            </thead>

            <tbody>
            {{#each products}}
            <tr>
                <td class="counterCell"></td>   
                <td>{{this.title}}</td>
                <td>{{this.orderType}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.price}}</td>
                <td>{{this.subTotal}}</td>
            </tr>
            
            {{else}}
                <td colspan="6">
                    <p>Your cart is empty</p>
                </td>
            {{/each}}
        </tbody>

        </table>

        <div class="order-total">
            <span>Total: </span>
            <span>{{this.total}}</span>
        </div>

        <div class="order-total">
            <input class="btn btn-secondary" id="btn-checkout" type="submit" value="Checkout">        
        </div>

    </form>
</section>
