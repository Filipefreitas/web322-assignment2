<section>

    <form id="fs-frm" name="orderTable" accept-charset="utf-8" action="/cart/confirmation" method="POST"> 
    <div id="order-container">
        <h2>Your cart</h2>

        <div id="order-details">

        <table id="table-products" class="table-products">
            <h4>Order details: </h4>

            <thead class="table-header">
                <th>#</th>
                <th>Item</th>
                <th>Type</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
            </thead>

            <tbody>
            {{#each products}}
            <tr>
                <td class="counterCell"></td>   
                <td>{{this.title}}</td>
                <td>{{this.orderType}}</td>
                <td>
                    <a class="btn-cart-qty" href="/cart/remove/{{this.id}}">
                        <i class="fas fa-minus" role="button"></i>
                    </a>

                    {{this.quantity}}
 
                    <a class="btn-cart-qty" href="{{#isRental this.orderType this.id}} {{/isRental}}">
                        <i class="fas fa-plus" role="button"></i>
                    </a>
                </td>
                <td>{{this.price}}</td>
                <td>{{this.subTotal}}</td>
            </tr>
            
            {{else}}
                <td colspan="6">
                    <p>Your cart is empty</p>
                </td>
            {{/each}}
        </tbody>

        </table>

        {{#if products}}
            <div class="cart-total">
                <span>Total: </span>
                <span>{{this.total}}</span>
            </div>

            <div class="cart-total">
                <input class="btn btn-secondary" id="btn-checkout" type="submit" value="Checkout">        
            </div>
        {{/if}}

    </form>
</section>
